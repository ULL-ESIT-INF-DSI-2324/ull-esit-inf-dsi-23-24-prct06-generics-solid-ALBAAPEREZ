{
  "include": ["src/**/*.ts"],
  "exclude": [
    "./tests",
    "./node_modules",
    "./dist"
  ],
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {"*": ["src/*"]},
    "esModuleInterop": true
  }
}